<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        cardCornerRadius="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="@drawable/a_border_recycle_view"
        android:elevation="3dp">

        <FrameLayout
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_gravity="center"
           >
            <ImageView
                android:id="@+id/imgCancel"
                android:layout_marginLeft="10dp"
                android:src="@drawable/cancel"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <LinearLayout
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">



                <TextView
                    android:textColor="#00a680"
                    android:textStyle="bold"
                    android:text="Tên nhà hàng"
                    android:id="@+id/txttennh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

                <TextView
                    android:textColor="#00a680"
                    android:layout_marginTop="15dp"
                    android:text="Tên món ăn"
                    android:id="@+id/txttenmonan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:weightSum="3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:layout_marginLeft="20dp"
                        android:id="@+id/btntru"
                        android:layout_width="0dp"
                        android:text="-"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:background="#ffcc00"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                    <Button
                        android:background="#bffaa6"
                        android:layout_marginLeft="20dp"
                        android:textColor="#d70b07"
                        android:id="@+id/btnsoluong"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:text="2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                    <Button
                        android:layout_marginLeft="20dp"
                        android:background="#ffcc00"
                        android:id="@+id/btncong"
                        android:text="+"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>